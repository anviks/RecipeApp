@model RecipeApp.Web.ViewModels.ReviewDetailsViewModel
@using CommonResource = RecipeApp.Resources.Common
@using ReviewResource = RecipeApp.Resources.Entities.Review

@{
    ViewData["Title"] = "Details";
}

<h1>@CommonResource.DetailsTitle</h1>

<div>
    <h4>@ReviewResource.ReviewSingular</h4>
    <hr />
    <partial name="_DetailsDelete" model="Model"/>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ReviewResponse.Id">@CommonResource.EditLink</a> |
    <a asp-action="Index">@CommonResource.BackToListLink</a>
</div>
