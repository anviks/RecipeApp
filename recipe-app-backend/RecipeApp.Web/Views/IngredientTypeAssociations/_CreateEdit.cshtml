@model RecipeApp.Web.ViewModels.IngredientTypeAssociationCreateEditViewModel
@using IngredientResource = RecipeApp.Resources.Entities.Ingredient;
@using IngredientTypeResource = RecipeApp.Resources.Entities.IngredientType;

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="IngredientTypeAssociation.IngredientId" class="control-label"></label>
    <select asp-for="IngredientTypeAssociation.IngredientId" class="form-control" asp-items="Model.IngredientSelectList">
        <option disabled selected value="">-- @IngredientResource.SelectIngredient --</option>
    </select>
    <span asp-validation-for="IngredientTypeAssociation.IngredientId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="IngredientTypeAssociation.IngredientTypeId" class="control-label"></label>
    <select asp-for="IngredientTypeAssociation.IngredientTypeId" class="form-control" asp-items="Model.IngredientTypeSelectList">
        <option disabled selected value="">-- @IngredientTypeResource.SelectIngredientType --</option>
    </select>
    <span asp-validation-for="IngredientTypeAssociation.IngredientTypeId" class="text-danger"></span>
</div>
