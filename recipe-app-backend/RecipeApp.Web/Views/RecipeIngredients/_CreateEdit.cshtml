@model RecipeApp.Web.ViewModels.RecipeIngredientCreateEditViewModel
@using RecipeIngredientResource = RecipeApp.Resources.Entities.RecipeIngredient
@using RecipeResource = RecipeApp.Resources.Entities.Recipe
@using IngredientResource = RecipeApp.Resources.Entities.Ingredient
@using UnitResource = RecipeApp.Resources.Entities.Unit

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="RecipeIngredient.RecipeId" class="control-label"></label>
    <select asp-for="RecipeIngredient.RecipeId" class="form-control" asp-items="Model.RecipeSelectList">
        <option disabled selected value="">-- @RecipeResource.SelectRecipe --</option>
    </select>
    <span asp-validation-for="RecipeIngredient.RecipeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RecipeIngredient.IngredientId" class="control-label"></label>
    <select asp-for="RecipeIngredient.IngredientId" class="form-control" asp-items="Model.IngredientSelectList">
        <option disabled selected value="">-- @IngredientResource.SelectIngredient --</option>
    </select>
    <span asp-validation-for="RecipeIngredient.IngredientId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RecipeIngredient.Quantity" class="control-label"></label>
    <input asp-for="RecipeIngredient.Quantity" class="form-control"/>
    <span asp-validation-for="RecipeIngredient.Quantity" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RecipeIngredient.UnitId" class="control-label"></label>
    <select id="unitSelect" asp-for="RecipeIngredient.UnitId" class="form-control" asp-items="Model.UnitSelectList">
        <option disabled selected value="">-- @UnitResource.SelectUnit --</option>
        <option value="">@RecipeIngredientResource.CustomUnit</option>
    </select>
    <span asp-validation-for="RecipeIngredient.UnitId" class="text-danger"></span>
</div>
<div class="form-group" id="customUnitGroup" style="display: none;">
    <label asp-for="RecipeIngredient.CustomUnit" class="control-label"></label>
    <input asp-for="RecipeIngredient.CustomUnit" class="form-control"/>
    <span asp-validation-for="RecipeIngredient.CustomUnit" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RecipeIngredient.IngredientModifier" class="control-label"></label>
    <input asp-for="RecipeIngredient.IngredientModifier" class="form-control"/>
    <span asp-validation-for="RecipeIngredient.IngredientModifier" class="text-danger"></span>
</div>