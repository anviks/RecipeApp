@model RecipeApp.Web.ViewModels.RecipeCategoryCreateEditViewModel
@using CategoryResource = RecipeApp.Resources.Entities.Category
@using RecipeResource = RecipeApp.Resources.Entities.Recipe

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="RecipeCategory.RecipeId" class="control-label"></label>
    <select asp-for="RecipeCategory.RecipeId" class="form-control" asp-items="Model.RecipeSelectList">
        <option disabled selected value="">-- @RecipeResource.SelectRecipe --</option>
    </select>
    <span asp-validation-for="RecipeCategory.RecipeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RecipeCategory.CategoryId" class="control-label"></label>
    <select asp-for="RecipeCategory.CategoryId" class="form-control" asp-items="Model.CategorySelectList">
        <option disabled selected value="">-- @CategoryResource.SelectCategory --</option>
    </select>
    <span asp-validation-for="RecipeCategory.CategoryId" class="text-danger"></span>
</div>