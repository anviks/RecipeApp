@model RecipeApp.Application.DTO.Category
@using CommonResource = RecipeApp.Resources.Common
@using CategoryResource = RecipeApp.Resources.Entities.Category;

@{
    ViewData["Title"] = "Delete";
}

<h1>@CommonResource.DeleteTitle</h1>

<h3>@CommonResource.DeleteConfirmQuestion</h3>
<div>
    <h4>@CategoryResource.CategorySingular</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <button type="submit" value="Delete" class="btn btn-danger">
            @CommonResource.DeleteButton
        </button> |
        <a asp-action="Index">@CommonResource.BackToListLink</a>
    </form>
</div>