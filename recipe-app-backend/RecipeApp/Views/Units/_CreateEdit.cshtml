@model RecipeApp.ViewModels.UnitCreateEditViewModel
@using App.Resources.App.BLL.DTO
@using UnitResource = App.Resources.App.BLL.DTO.Unit;

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Unit.IngredientTypeId" class="control-label"></label>
    <select asp-for="Unit.IngredientTypeId" class="form-control" asp-items="Model.IngredientTypeSelectList">
        <option disabled selected value="">-- @IngredientType.SelectIngredientType --</option>
    </select>
    <span asp-validation-for="Unit.IngredientTypeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Unit.Name" class="control-label"></label>
    <input asp-for="Unit.Name" class="form-control" />
    <span asp-validation-for="Unit.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Unit.Abbreviation" class="control-label"></label>
    <input asp-for="Unit.Abbreviation" class="form-control" />
    <span asp-validation-for="Unit.Abbreviation" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Unit.UnitMultiplier" class="control-label"></label>
    <input asp-for="Unit.UnitMultiplier" class="form-control" />
    <span asp-validation-for="Unit.UnitMultiplier" class="text-danger"></span>
</div>