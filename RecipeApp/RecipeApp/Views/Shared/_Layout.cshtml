@using App.BLL.DTO
@using Base.Resources
@using AppResource = App.Resources.App.BLL.DTO;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RecipeApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/RecipeApp.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RecipeApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@App.Resources.WebApp.Views.Shared._Layout.Privacy</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Admin
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Categories" asp-action="Index">@AppResource.Category.Categories</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Ingredients" asp-action="Index">@AppResource.Ingredient.Ingredients</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="IngredientTypes" asp-action="Index">@AppResource.IngredientType.IngredientTypes</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="IngredientTypeAssociations" asp-action="Index">@AppResource.IngredientTypeAssociation.IngredientTypeAssociations</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Recipes" asp-action="Index">@AppResource.Recipe.Recipes</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="RecipeCategories" asp-action="Index">@AppResource.RecipeCategory.RecipeCategories</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="RecipeIngredients" asp-action="Index">@AppResource.RecipeIngredient.RecipeIngredients</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Reviews" asp-action="Index">@AppResource.Review.Reviews</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Units" asp-action="Index">@AppResource.Unit.Units</a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @Common.NavigationDropdown
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index">@AppResource.Category.Categories</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Ingredients" asp-action="Index">@AppResource.Ingredient.Ingredients</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="IngredientTypes" asp-action="Index">@AppResource.IngredientType.IngredientTypes</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="IngredientTypeAssociations" asp-action="Index">@AppResource.IngredientTypeAssociation.IngredientTypeAssociations</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Recipes" asp-action="Index">@AppResource.Recipe.Recipes</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="RecipeCategories" asp-action="Index">@AppResource.RecipeCategory.RecipeCategories</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="RecipeIngredients" asp-action="Index">@AppResource.RecipeIngredient.RecipeIngredients</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Reviews" asp-action="Index">@AppResource.Review.Reviews</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Units" asp-action="Index">@AppResource.Unit.Units</a>
                            </li>
                        </ul>
                    </li>
                    <partial name="_LanguageSelectionPartial"/>
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - RecipeApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">@App.Resources.WebApp.Views.Shared._Layout.Privacy</a> | @Thread.CurrentThread.CurrentCulture.Name | @Thread.CurrentThread.CurrentUICulture.Name
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/htmx/htmx.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>