@model RecipeApp.Areas.Admin.ViewModels.ReviewCreateEditViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Review.RecipeId" class="control-label"></label>
    <select asp-for="Review.RecipeId" class="form-control" asp-items="Model.RecipeSelectList"></select>
    <span asp-validation-for="Review.RecipeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Review.Rating" class="control-label"></label>
    <input asp-for="Review.Rating" class="form-control" />
    <span asp-validation-for="Review.Rating" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Review.Content" class="control-label"></label>
    <input asp-for="Review.Content" class="form-control" />
    <span asp-validation-for="Review.Content" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Review.CreatedAt" class="control-label"></label>
    <input asp-for="Review.CreatedAt" class="form-control" />
    <span asp-validation-for="Review.CreatedAt" class="text-danger"></span>
</div>