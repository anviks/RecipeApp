@model RecipeApp.Areas.Admin.ViewModels.ReviewDetailsViewModel

<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ReviewResponse.User)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ReviewResponse.User.Username)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.RecipeTitle)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.RecipeTitle)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ReviewResponse.Rating)
    </dt>
    <dd class = "col-sm-10">
        @{
            for (var i = 0; i < Model.ReviewResponse.Rating / 2; i++)
            {
                <i class="rating__icon rating__icon--star fa fa-star"></i>
            }
            if (Model.ReviewResponse.Rating % 2 != 0)
            {
                <i class="rating__icon rating__icon--star fa fa-star-half"></i>
            }
        }
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ReviewResponse.Comment)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ReviewResponse.Comment)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ReviewResponse.CreatedAt)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ReviewResponse.CreatedAt)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ReviewResponse.Edited)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ReviewResponse.Edited)
    </dd>
</dl>