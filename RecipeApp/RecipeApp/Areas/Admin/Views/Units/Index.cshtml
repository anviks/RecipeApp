@model IEnumerable<RecipeApp.Areas.Admin.ViewModels.UnitDetailsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IngredientTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit.Abbreviation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit.UnitMultiplier)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit.Abbreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit.UnitMultiplier)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Unit.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Unit.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Unit.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>