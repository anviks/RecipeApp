@model App.BLL.DTO.Ingredient
@using CommonResource = Base.Resources.Common
@using IngredientResources = App.Resources.App.BLL.DTO.Ingredient;

@{
    ViewData["Title"] = "Edit";
}

<h1>@CommonResource.EditTitle</h1>

<h4>@IngredientResources.IngredientSingular</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <partial name="_CreateEdit" model="Model"/>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary">
                    @CommonResource.SaveButton
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@CommonResource.BackToListLink</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
