@model RecipeApp.Areas.Admin.ViewModels.RecipeIngredientDetailsViewModel
@using CommonResource = Base.Resources.Common
@using RecipeIngredientResource = App.Resources.App.BLL.DTO.RecipeIngredient;

@{
    ViewData["Title"] = "Delete";
}

<h1>@CommonResource.DeleteTitle</h1>

<h3>@CommonResource.DeleteConfirmQuestion</h3>
<div>
    <h4>@RecipeIngredientResource.RecipeIngredientSingular</h4>
    <hr/>
    <partial name="_DetailsDelete" model="Model"/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="RecipeIngredient.Id"/>
        <button type="submit" value="Delete" class="btn btn-danger">
            @CommonResource.DeleteButton
        </button> |
        <a asp-action="Index">@CommonResource.BackToListLink</a>
    </form>
</div>