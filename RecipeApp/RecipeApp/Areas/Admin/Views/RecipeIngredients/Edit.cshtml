@model RecipeApp.Areas.Admin.ViewModels.RecipeIngredientCreateEditViewModel
@using CommonResource = Base.Resources.Common
@using RecipeIngredientResource = App.Resources.App.BLL.DTO.RecipeIngredient;

@{
    ViewData["Title"] = "Edit";
}

<h1>@CommonResource.EditTitle</h1>

<h4>@RecipeIngredientResource.RecipeIngredientSingular</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <partial name="_CreateEdit" model="Model"/>
            <input type="hidden" asp-for="RecipeIngredient.Id"/>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary">
                    @CommonResource.SaveButton
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@CommonResource.BackToListLink</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/customUnitField.js"></script>
}