@model IEnumerable<RecipeApp.Areas.Admin.ViewModels.RecipeIngredientDetailsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RecipeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IngredientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeIngredient.CustomUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeIngredient.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeIngredient.IngredientModifier)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeIngredient.CustomUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeIngredient.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeIngredient.IngredientModifier)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecipeIngredient.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecipeIngredient.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecipeIngredient.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>