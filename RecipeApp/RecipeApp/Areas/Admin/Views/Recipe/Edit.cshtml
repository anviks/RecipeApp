@model RecipeApp.Areas.Admin.ViewModels.RecipeCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <partial name="_CreateEdit" model="Model"/>
            <div class="form-group">
                <label asp-for="Recipe.AuthorUserId" class="control-label"></label>
                <select asp-for="Recipe.AuthorUserId" class="form-control" asp-items="Model.AuthorUserSelectList"></select>
                <span asp-validation-for="Recipe.AuthorUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.UpdatingUserId" class="control-label"></label>
                <select asp-for="Recipe.UpdatingUserId" class="form-control" asp-items="Model.UpdatingUserSelectList"></select>
                <span asp-validation-for="Recipe.UpdatingUserId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Recipe.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
