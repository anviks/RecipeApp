@model WebApp.ViewModels.RaffleCreateEditViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Raffle.RaffleName" class="control-label"></label>
    <input asp-for="Raffle.RaffleName" class="form-control" />
    <span asp-validation-for="Raffle.RaffleName" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Raffle.VisibleToPublic" /> @Html.DisplayNameFor(model => model.Raffle.VisibleToPublic)
    </label>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Raffle.AllowAnonymousUsers" /> @Html.DisplayNameFor(model => model.Raffle.AllowAnonymousUsers)
    </label>
</div>
<div class="form-group">
    <label asp-for="Raffle.StartDate" class="control-label"></label>
    <input asp-for="Raffle.StartDate" class="form-control" />
    <span asp-validation-for="Raffle.StartDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Raffle.EndDate" class="control-label"></label>
    <input asp-for="Raffle.EndDate" class="form-control" />
    <span asp-validation-for="Raffle.EndDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Raffle.CompanyId" class="control-label"></label>
    <select asp-for="Raffle.CompanyId" class="form-control" asp-items="Model.Companies"></select>
    <span asp-validation-for="Raffle.CompanyId" class="text-danger"></span>
</div>