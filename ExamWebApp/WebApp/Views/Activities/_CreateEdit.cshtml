@model WebApp.ViewModels.ActivityCreateEditViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Activity.Duration" class="control-label"></label>
    <input asp-for="Activity.Duration" class="form-control" />
    <span asp-validation-for="Activity.Duration" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Activity.Date" class="control-label"></label>
    <input asp-for="Activity.Date" class="form-control" />
    <span asp-validation-for="Activity.Date" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Activity.UserId" class="control-label"></label>
    <select asp-for="Activity.UserId" class="form-control" asp-items="Model.Users"></select>
    <span asp-validation-for="Activity.UserId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Activity.ActivityTypeId" class="control-label"></label>
    <select asp-for="Activity.ActivityTypeId" class="form-control" asp-items="Model.ActivityTypes"></select>
    <span asp-validation-for="Activity.ActivityTypeId" class="text-danger"></span>
</div>
